<ul class="userCards py-8 w-[80%] mx-auto flex flex-col gap-8">
  <% @users.each do |user| %>
    <li class="userCard flex flex-row gap-[30px]">
      <div class="userImage w-[20%] h-[20%]">
        <img src=<%= user.photo %>>
      </div>
      <div class="userDetails bg-[#11537d] rounded-[30px] flex-grow text-white flex justify-between items-center p-[30px]">
        <h2 class="text-[40px] font-[600]"><%= user.name %></h2>
        <p class="self-end text-[20px] font-[400]">Number of posts: <%= user.posts_counter %></p>
      </div>
    </li>
  <% end %>
</ul>